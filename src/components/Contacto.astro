---
import Mail from "../icons/Mail.astro";
import MailForward from "../icons/MailForward.astro";
import Phone from "../icons/Phone.astro";
---

<section id="Contacto">
  <h1>Contacto &nbsp;<Mail /></h1>
  <form action="/" method="post">
    <fieldset>
      <legend>Información personal</legend>
      <label> Nombre: Javier Guerrero Gallo</label>
      <label> Fecha de Nacimiento: Abril del 2000</label>
      <label> Email: guerrerogallojavier@gmail.com</label>
    </fieldset>

    <fieldset>
      <legend>Información adicional</legend>
      <label> Teléfono de contacto: +34 674 774 983</label>
      <label> Dirección: Pola de Laviana, Asturias, España</label>
    </fieldset>
    <div class="actions">
      <a href="mailto:guerrerogallojavier@gmail.com"
        >Envíame un correo <MailForward /></a
      >
      <a href="tel:+34674774983">Llámame <Phone /></a>
    </div>
  </form>
</section>

<style>
  #Contacto {
    padding-top: 100px;
  }
  form {
    padding-left: 30px;
    padding-top: 20px;

    color: rgb(164, 164, 164);

    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  fieldset {
    display: flex;
    flex-direction: column;
    border-radius: 5px;
  }
  label {
    margin: 10px;
  }
  a:hover {
    scale: 1;
    box-shadow: none;
  }
  a {
    display: flex;
    gap: 8px;
  }
  .actions {
    display: flex;
    justify-content: center;
    gap: 32px;
  }
  @media (max-width: 725px) {
    form {
      padding-left: 0;
    }
  }
</style>
