---
import Mail from "../icons/Mail.astro";
import MailForward from "../icons/MailForward.astro";
import Phone from "../icons/Phone.astro";
---

<section id="Contacto">
  <h1>Contacto &nbsp;<Mail /></h1>
  <form action="/" method="post">
    <fieldset>
      <legend>Información personal</legend>
      <label
        >Nombre:
        <input
          type="text"
          name="name"
          placeholder="Javier Guerrero Gallo"
          required
        />
      </label>
      <label
        >Email:
        <input
          type="email"
          name="email"
          placeholder="guerrerogallojavier@gmail.com"
          required
        />
      </label>
    </fieldset>

    <fieldset>
      <legend>Información adicional</legend>
      <label
        >Teléfono:
        <input
          type="tel"
          name="phone"
          placeholder="677888999"
          required
          pattern="[0-9]{9}"
        />
      </label>

      <datalist id="langueages">
        <option value="JavaScirpt"></option>
        <option value="Phyton"></option>
        <option value="Java"></option>
        <option value="C#"></option>
      </datalist>
      <label
        >¿Con qué lenguaje quieres que te ayude?
        <input name="langueages" list="langueages" />
      </label>
    </fieldset>
    <div class="actions">
      <a href="mailto:guerrerogallojavier@gmail.com"
        >Envíame un correo <MailForward /></a
      >
      <a href="tel:+34674774983">Llámame <Phone /></a>
    </div>

    <input type="submit" value="Enviar contacto" />
  </form>
</section>

<style>
  #Contacto {
    padding-top: 100px;
  }
  form {
    padding-left: 30px;
    padding-top: 20px;

    color: rgb(164, 164, 164);

    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  fieldset {
    display: flex;
    flex-direction: column;
    border-radius: 5px;
  }
  label {
    margin: 10px;
  }
  a:hover {
    scale: 1;
    box-shadow: none;
  }
  a {
    display: flex;
    gap: 8px;
  }
  .actions {
    display: flex;
    justify-content: center;
    gap: 32px;
  }
</style>
