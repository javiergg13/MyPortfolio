import Card from "./Card.astro";

const projects = [
  {
    title: "Spotify Clone",
    description:
      "Un clon de la p√°gina web de spotify, utilizando Astro con React y Svelte para darle interactividad y Tailwind para los estilos.",
    tecnologies: [
      {
        name: "Astro",
        url: "url",
      },
      {
        name: "React",
        url: "url",
      },
      {
        name: "Svelte",
        url: "url",
      },
      {
        name: "Tailwind",
        url: "url",
      },
    ],
    image: "hrl",
    gitHubUrl: "https://github.com/javiergg13/spotify-clone",
    height: 250,
  },
  {
    title: "Prueba 2",
    description: "description",
    image: "hrl",
  },
  {
    title: "Prueba 3",
    description: "description",
